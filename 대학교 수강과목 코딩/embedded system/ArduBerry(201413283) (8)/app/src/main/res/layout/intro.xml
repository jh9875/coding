<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/goBtBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="moveFunc"
        android:text="@string/go_bt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/goWiFiBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_wifi"
        android:textStyle="bold"
        android:onClick="moveFunc"/>

    <Button
        android:id="@+id/goSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="go_switch" />


    <Button
        android:id="@+id/goPotentionmeter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="go_Potentionmeter" />

    <Button
        android:id="@+id/goPir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="go_pir" />

    <Button
        android:id="@+id/goFnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="go_fnd" />

    <Button
        android:id="@+id/goMoter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="go_moter" />

    <Button
        android:id="@+id/goLCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="go_LCD" />

    <Button
        android:id="@+id/goBuzzer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="go_buzzer" />

    <Button
        android:id="@+id/goQ1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="Q1" />

    <Button
        android:id="@+id/goQ2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="Q2" />

    <Button
        android:id="@+id/goQ3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="moveFunc"
        android:text="Q3" />


</LinearLayout>
